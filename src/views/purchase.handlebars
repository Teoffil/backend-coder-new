<!-- purchase.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Confirmation</title>
</head>
<body>
    <h1>Purchase Confirmation</h1>
    {{#if productsWithInsufficientStock.length}}
        <p>Some products could not be processed due to insufficient stock:</p>
        <ul>
            {{#each productsWithInsufficientStock}}
                <li>Product ID: {{this}}</li>
            {{/each}}
        </ul>
        <p>Please review your cart and make the necessary adjustments.</p>
    {{else}}
        <p>Total Amount: {{totalAmount}}</p>
        <form id="purchase-form" action="/api/carts/{{cartId}}/confirm-purchase" method="POST">
            <button type="submit">Confirm Purchase</button>
        </form>
    {{/if}}
</body>
</html>
